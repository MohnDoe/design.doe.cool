---
import Image from "astro/components/Image.astro";
import BrandThing from "./BrandThing.astro";
import screenImage from "../../src/images/work/bobine.png";
import secondScreenImage from "../../src/images/work/bobine/desktop.png";

const workScreenAlt =
  "Phone screen shot displaying the homepage of the app La Bobine";
---

<div class="work">
  <div class="preview">
    <div class="screens">
      <Image src={screenImage} alt={workScreenAlt} width={800} class="image"/>
    </div>
  </div>
  <div class="work-details">
    <div class="description-container / rounded-container">
      <div class="container-text">
        <h2 class="container-title">La Bobine</h2>
        <p class="container-description">
          “La Bobine” is an innovative app for movie lovers, making it easy to
          find a movie experience close to you without the hassle of having to
          look at multiple places. With a user-centric and mobile-first approch,
          I helped “La Bobine” with a complete redesign on its app. Creating a
          new design system that fits with the components library already used
          (Mandine, React).
        </p>
      </div>
      <BrandThing />
    </div>
    <div class="tag-list">
      <span>new design-system</span>
      <div class="dot"></div>
      <span>new design</span>
      <div class="dot"></div>
      <span>mobile</span>
    </div>
  </div>
</div>

<style>
  .work {
    display: flex;
    padding: 16px;
    flex-direction: column;
    align-items: flex-start;
    gap: 16px;
    align-self: stretch;
    color: var(--Main, #15171a);
  }

  .work-details {
    display: flex;
    max-width: 720px;
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
    align-self: stretch;
  }

  .tag-list {
    display: flex;
    flex-wrap: nowrap;
    align-items: baseline;
    align-self: stretch;
    gap: 8px;
    flex: 1 1 auto;
    font-family: Switzer;
    font-size: 16px;
    font-weight: 700;
    line-height: normal;
    justify-content: start;
    overflow-y: scroll;
    height: auto;
  }

  .tag-list span {
    display: inline-flex;
    flex: 0 0 auto;
  }

  .tag-list .dot {
    flex: 0 0 auto;
    height: 8px;
    width: 8px;
    border-radius: 2px;
    background: #B4ADEA;
  }

  .preview {
    display: flex;
    padding: 16px;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    align-self: stretch;
    border-radius: 8px;
    background: rgba(255, 217, 0, 0.07);
  }

  .preview .screens {
    display: flex;
    align-items: center;
    align-self: stretch;
    overflow: hidden;
  }
  .screens .image {
    width: 100%;
    height: auto;
  }
  .image-container--second {
    min-width: 0;
    justify-items: end;
    flex: 1 1 auto;
    display: flex;
    justify-content: end;
  }

  .image-container--second img {
    border-radius: 4px;
    overflow: hidden;
    flex: 1 0 auto;
    height: auto;
  }
</style>
