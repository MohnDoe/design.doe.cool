---
import BrandThing from "./BrandThing.astro";
---

<div class="card-container">
  <div class="card">
    <div class="logo">
      <span class="logoname">Doe</span>
      <BrandThing class={"small"} />
    </div>
    <span class="subtitle"> technical-centric product design </span>
  </div>
</div>

<style>
  .card-container {
    display: flex;
    padding: 16px 32px;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    align-self: stretch;
    border-radius: 16px;
    background: rgba(255, 217, 0, 0.07);
  }

  .card-container .card {
    display: flex;
    padding: 16px;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    border-style: solid;
    border-radius: 8px;
    border-color: var(--Primary, #ffd900);
    border-width: 2px;
    border-bottom-width: 8px;
    background: var(--Color-2, #fff);
  }

  .card .subtitle {
    color: var(--Main, #15171a);
    text-align: center;
    font-family: Outfit, sans-serif;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 140%; /* 22.4px */
  }

  .card .logo {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
  }
  .logo .logoname {
    color: var(--Main, #15171a);
    font-family: Outfit;
    font-size: 32px;
    font-weight: 900;
    line-height: 100%; /* 36px */
  }
</style>
